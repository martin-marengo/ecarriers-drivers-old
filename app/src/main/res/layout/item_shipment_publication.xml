<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:paddingBottom="8dp"
    android:paddingTop="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="70"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_client"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/tv_title_mid"
                android:textColor="@color/textColorPrimary"
                android:text="Martin Marengo"/>


            <TextView
                android:id="@+id/tv_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/tv_body"
                android:textColor="@color/textColorPrimary"
                android:text="Descripcion bastante larga bla bla bla"/>
        </LinearLayout>


        <Button
            android:id="@+id/btn_change_state"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@android:color/transparent"
            android:textAllCaps="true"
            android:textSize="@dimen/tv_body_small"
            android:textColor="@color/colorAccentDark"
            android:foreground="?android:selectableItemBackground"
            android:text="@string/text_waiting_pickup_state"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="@dimen/tv_body_small"
            android:textColor="@color/textColorSecondary"
            android:text="@string/text_pick_up_address"/>

        <TextView
            android:id="@+id/tv_origin_address"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="@dimen/tv_body_small"
            android:textColor="@color/textColorSecondary"
            android:text="Descripcion bastante larga bla bla bla"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="@dimen/tv_body_small"
            android:textColor="@color/textColorSecondary"
            android:text="@string/text_delivery_address"/>

        <TextView
            android:id="@+id/tv_destination_address"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="@dimen/tv_body_small"
            android:textColor="@color/textColorSecondary"
            android:text="Descripcion bastante larga bla bla bla"/>
    </LinearLayout>

</LinearLayout>